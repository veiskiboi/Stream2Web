# .env â€” customize these as needed

SERVER_IP=127.0.0.1
UDP_PORT=1234
WEB_PORT=4000

VIDEO_DEVICE=/dev/video0

HLS_DIR=/var/www/html/stream
ARCHIVE_DIR=/var/www/html/archive

LOG_DIR=./logs
LOCK_DIR=./tmp

SEGMENT_DURATION=4           # .ts segment length in seconds
MINUTES_PER_FILE=1           # .mp4 clip length in minutes
MAX_ARCHIVE_SIZE_GB=1        # max size for archive folder in GB

# STATE_FILE path, recommended relative to LOG_DIR or absolute
STATE_FILE=./logs/mp4_compiler.state

# NGINX configs
NGINX_SITE_AVAILABLE=/etc/nginx/sites-available/Stream2Web
NGINX_SITE_ENABLED=/etc/nginx/sites-enabled/Stream2Web

WEB_ROOT=/var/www/html
STREAM_LOCATION=/stream
